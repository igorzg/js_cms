{% import "layouts/macros" as macros %}
{% extends "layouts/center" %}
{% block content %}
    <div class="panel panel-default mv-login">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-user"></span>
            {{ t('Login') }}
        </div>
        <div class="center-block">
            {% if errors.length > 0 %}
                <div class="alert alert-danger" role="alert">
                    <ul>
                        {% for item in errors %}
                            <li>{{ item }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <form action="{{ createUrl('admin/auth/login') }}" method="POST"
                  enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    {{ macros.input_text('username', 'Username') }}
                </div>
                <div class="form-group">
                    {{ macros.input_password('password', 'Password') }}
                </div>
                <div class="form-group">
                    <input type="submit" value="{{ t('Submit') }}" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}