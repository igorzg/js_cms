{% extends "layouts/default" %}
{% block content %}
    <div class="jumbotron">
        <h1 class="mv-brand">{{ t('Admin module') }}</h1>
        <p>{{ t('Choose one of possible options') }}</p>
        <ul class="nav nav-pills nav-stacked">
            <li class="btn btn-default btn-lg">
                <a href="{{ createUrl('home/index') }}" target="_blank">
                    <span class="glyphicon glyphicon-new-window"></span>
                    {{ t('Open web page') }}
                </a>
            </li>
            {% for item in menu %}
                {% if loop.index > 1 && loop.index < menu.length %}
                    <li class="btn btn-default btn-lg">
                        <a href="{{ item.href }}">
                            {% if item.icon %}<span class="{{ item.icon }}"></span>{% endif %}
                            {{ item.label }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}